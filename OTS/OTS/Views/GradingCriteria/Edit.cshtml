@model OTS.Model.GradingCriteria

@{
    ViewBag.Title = "Edit";
}


<div class="panel panel-default" data-widget='{"draggable": "false"}'>
    <div class="panel-heading">
        <h2>Edit Grading Criteria Form</h2>
        <div class="panel-ctrls"
             data-actions-container=""
             data-action-collapse='{"target": ".panel-body"}'
             data-action-expand=''
             data-action-colorpicker=''>
        </div>
    </div>
    <div class="panel-editbox" data-widget-controls=""></div>
    <div class="panel-body">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)
                @Html.HiddenFor(model => model.CreatedBy)
                @Html.HiddenFor(model => model.CreatedDate)

                <div class="form-group">
                    <label class="control-label col-md-2">From Value</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.minVal, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.minVal, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">To Value</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.maxVal, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.maxVal, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Grade</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.grade, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.grade, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="panel-footer">
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-2">
                            <input type="submit" value="Submit" class="btn-primary btn" />
                            @Html.ActionLink("Cancel", "Index", "GradingCriteria", null, new { @class = "btn-default btn" })
                        </div>
                    </div>
                </div>

            </div>
        }


    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>


