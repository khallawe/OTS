@model IEnumerable<OTS.Models.QuestionModel>

@{
    ViewBag.Title = "Question List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Question List</h2>

<p>
    @Html.ActionLink("Add New Question", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Inventory
        </th>
        <th>
            SubInventory
        </th>
        <th>
            Question
        </th>
        <th>
            Number of Question
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    using (Html.BeginForm("Delete", "Question", new { id = item.Id }))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InventoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubInventoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfAnswers)
            </td>
            <td>
                <a href="@Url.Action("Edit")/@item.Id" id="@item.Id">
                    <img src="@Url.Content("~/assets/images/edit1.png")" width="35" height="30" />
                </a>
                <input type="submit" value="delete" onclick="return confirm('Are You Sure to delete the item?!');"/>
            </td>
        </tr>
    }
}
</table>
