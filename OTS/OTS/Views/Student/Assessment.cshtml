@model OTS.Model.Student


<div class="panel panel-default" data-widget='{"draggable": "false"}'>
    <div class="panel-heading">
        <h2>Generate Assessment</h2>
        <div class="panel-ctrls"
             data-actions-container=""
             data-action-collapse='{"target": ".panel-body"}'
             data-action-expand=''
             data-action-colorpicker=''>
        </div>
    </div>
    <div class="panel-editbox" data-widget-controls=""></div>
    <div class="panel-body">


        <div class="form-horizontal">

            <div class="form-group">
                <label class="control-label col-md-2">Student ID</label>
                <div class="col-md-10">
                    <label class="control-label col-md-10">@Model.studentID</label>

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Student Name</label>
                <div class="col-md-10">
                    <label class="control-label col-md-10">@Model.studentName</label>

                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Student Email</label>
                <div class="col-md-10">
                    <label class="control-label col-md-10">@Model.studentEmail</label>

                </div>
            </div>
           

            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Generate Accessment" class="btn btn-primary" />
                                @Html.ActionLink("Cancel", "Index", "Student", null, new { @class = "btn-default btn" })
                            </div>
                        }

                    </div>
                </div>
            </div>

        </div>



    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>